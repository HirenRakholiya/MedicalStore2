
@{
    ViewBag.Title = "Index";
}

<h2>Category</h2>
<a href="@Url.Action("Create","Category")">Add Category</a>
<div class="container">
    <table border="1" class="table">
        <tr class="bg-primary">
            <th>Category Name</th>
            <th colspan="2">Action</th>
        </tr>

        @for(int i=0;i<Model.Rows.Count;i++)
            {
            <tr>
                <td>@Model.Rows[i][1]</td>
                <td>
                    <a href="@Url.Action("Edit","Category",new { @id=@Model.Rows[i][0]})">Edit</a>
                    <a href="@Url.Action("Delete","Category",new { @id=@Model.Rows[i][0]})">Delete</a>
                </td>
                </tr>
            }
    </table>
</div>