
@{
    ViewBag.Title = "Index";
}

<h2>Index</h2>

<h2>Category</h2>
<a href="@Url.Action("Create","Type")">Add Type</a>
<div class="container-fluid">
    <table class="table">
        <tr class="bg-primary">
            <th>Type</th>
            <th colspan="2">Action</th>
        </tr>

        @for (int i = 0; i < Model.Rows.Count; i++)
        {
            <tr>
                <td>@Model.Rows[i][1]</td>
                <td style="width:200px">
                    <button class="btn bg-success border-0" style="width:80px"><a href="@Url.Action("Edit","Type",new { @id=@Model.Rows[i][0]})">Edit</a></button>
                    <button class="btn bg-danger border-0" style="width:80px"> <a href="@Url.Action("Delete","Type",new { @id=@Model.Rows[i][0]})">Delete</a></button>
                </td>
            </tr>
        }
    </table>
</div>
